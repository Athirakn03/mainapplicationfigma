<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="240dp"
       android:orientation="horizontal">
    <LinearLayout
           android:id="@+id/linearlayoutp1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:background="#cccccc">

           <RelativeLayout
               android:orientation="vertical"
               android:id="@+id/layout"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:layout_weight="1"
               android:layout_alignParentTop="true">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Active"
                       android:textColor="#07B778"
                       android:textSize="25sp"
                       android:textStyle="bold" /></LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/text2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/text"
                       android:layout_marginBottom="-2sp"
                       android:layout_weight="10dp"
                       android:textSize="17sp"
                       android:text="subscription"
                       android:texttColor="#263238" />

                   <TextView
                       android:id="@+id/text3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="30dp"
                       android:text="6months"
                       android:textColor="#263228"
                       android:textSize="17sp"
                       android:textStyle="bold" />
               </LinearLayout>

           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/layout5"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:layout_weight="1"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/img"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:gravity="center_vertical"
                       android:src="@mipmap/ic_launcher" />

                   <TextView
                       android:id="@+id/txtname"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/img"
                       android:layout_centerVertical="true"
                       android:layout_weight="30dp"
                       android:gravity="center"
                       android:singleLine="true"
                       android:text="hi milk coins"
                       android:textsize="26dp" />

               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:orientation="vertical"
               android:id="@+id/relativelayout2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:orientation="vertical">


                   <TextView
                       android:id="@+id/textvalid"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/text"
                       android:layout_marginBottom="-2sp"
                       android:layout_weight="10dp"
                       android:text="valid upto"
                       android:textSize="17sp"
                       android:texttColor="#263238" />

                   <TextView
                       android:id="@+id/textdate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="30dp"
                       android:text="20 AUG 2019"
                       android:textColor="#263228"
                       android:textSize="17sp"
                       android:textStyle="bold" />

               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>


</LinearLayout>
    <RelativeLayout
        android:id="@+id/relativelayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--        Continue here-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:text="Please select any of the below package to renew or extend the subscription  " />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout6"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/relativelayout5"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout6"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview9"
                android:text="6           save upto 20%off"
                android:textSize="30sp"
                android:textColor="#ff0000"
                android:layout_marginLeft="24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text9"
                android:text="Months            1500"
                android:textColor="#ff0000"
                android:textSize="20sp"/>


        </LinearLayout>
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="3"
       android:id="@+id/relativelayout19"
       android:layout_marginBottom="-37dp"
       android:layout_alignBottom="@+id/relativelayout6">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/linearlayout12"
           android:orientation="horizontal">
           <TextView
               android:layout_marginLeft="21dp"
        android:id="@+id/textview17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12           save upto 30% extension"
               android:textSize="26sp"
               android:textColor="#ff0000"/>

       </LinearLayout>
   </RelativeLayout>
    <RelativeLayout
    android:id="@+id/Relativeterms"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="-118dp"
        android:layout_alignBottom="@id/relativelayout19">
        <LinearLayout
            android:id="@+id/layoutterms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="27dp"
                android:id="@+id/textterms"
                android:text="By selecting the terms you are aggreing to agele app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativepayment"
        android:layout_alignBottom="@id/Relativeterms"
        android:layout_marginBottom="-20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearpayment"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:id="@+id/paymentpolicy"
                android:text="payment policy"
                android:orinetation="vertical"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelayoutbtn"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_marginBottom="-58sp"
    android:layout_alignBottom="@id/relativepayment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayoutbtn"
        android:orientation="vertical">

        <Button
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROCEED TO PAY"
            android:id="@+id/btn"/>
    </LinearLayout>
</RelativeLayout>


</RelativeLayout>